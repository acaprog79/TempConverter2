<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alejandria.Project1_TempConverter.TempConverterActivity">

    <TextView
        android:id="@+id/farenheitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farenheit"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="85dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/TitleLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/farenheitED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/numberInput"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="64dp"
        android:layout_alignBottom="@+id/farenheitLabel"
        android:layout_alignStart="@+id/TitleLabel" />

    <TextView
        android:id="@+id/celciusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celcius"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="134dp"
        android:layout_below="@+id/farenheitED"
        android:layout_alignStart="@+id/farenheitLabel"
        android:layout_marginTop="61dp" />

    <TextView
        android:id="@+id/convertTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultCelcius"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="134dp"
        android:layout_alignBaseline="@+id/celciusLabel"
        android:layout_alignBottom="@+id/celciusLabel"
        android:layout_alignStart="@+id/farenheitED" />

    <TextView
        android:id="@+id/TitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degrees"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
